<UserControl x:Class="ListViewItemScheduler.ListViewItemSchedulerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ListViewItemScheduler"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="200"
            DataContext="{Binding Main, Source={StaticResource Locator}}">
    <!--d:DesignHeight="25" d:DesignWidth="200">-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>
        <Button  Grid.Column="0" Width="25" Margin="0" ><!--Click="EditButton_Click"-->
            <Image  Source="/src/Pencil.png"/>
        </Button>
        <TextBox Grid.Column="1" Width="Auto"/>
        <Button  Grid.Column="2" Command="{Binding RemoveButton_Click}" >
            <Image Source="pack://application:/src/remove.png" />
            
        </Button>
    </Grid>
</UserControl>
